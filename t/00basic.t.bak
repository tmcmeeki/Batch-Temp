use Logfer qw/ :all /;
# ___  or use this if you're intending to publish on cpan ___
use Log::Log4perl qw/ :easy /; Log::Log4perl->easy_init($ERROR);

use Data::Dumper;
use File::Glob;

use Test::More tests => 2;

BEGIN { use_ok('___Class_here___') };


# -------- global variables --------
my $log = get_logger(__FILE__);
my $c_this = "___Class_here___";
my $cycle = 1;


# -------- new / initilaisation --------
my $obj1 = ___Class_here___->new;
my $obj2 = ___Class_here___->new('dir' => $s_dn);

$log->info("creating new $c_this objects...");

isa_ok( $obj1, $c_this,	'new no args');
isa_ok( $obj2, $c_this,	'new with args');


# -------- simple attributes: numbers --------
for my $opint (qw/ attribute3 attribute4 /) {

	isnt($obj1->$opint, -1,			"default $opint cycle_$cycle");

	my $default = $obj1->$opint;
	my $assign = !$default;

	is($obj1->$opint($assign), $assign,	"assign $opint cycle_$cycle");
	isnt($obj1->$opint, $default,		"check $opint cycle_$cycle");

	$log->debug(sprintf "opint [$opint]=%d", $obj1->$opint);

	ok($obj1->$opint >= 0,			"integer $opint cycle_$cycle");
	is($obj1->$opint($default), $default,   "reset $opint cycle_$cycle");

        $cycle++;
}


# -------- simple attributes: strings --------
for my $opstr (qw/ attribute1 attribute2 /) {

	my $s_trash = "_bla_";

	isnt($obj1->$opstr, $s_trash,		"default $opstr cycle_$cycle");

	my $default = $obj1->$opstr;

	is($obj1->$opstr($s_trash), $s_trash,	"assign $opstr cycle_$cycle");
	isnt($obj1->$opstr, $default,		"check $opstr cycle_$cycle");

	$log->debug(sprintf "opint [$opint]=%s", $obj1->$opstr);

	is($obj1->$opstr($default), $default,   "reset $opstr cycle_$cycle");

        $cycle++;
}


# -------- finalise --------
$log->info("processing complete.");

__END__

